{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireCleanWorkingDir": false,
    "push": false,
    "commit": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "release": true
  },
  "hooks": {
    "before:init": "scripts/remove-workspace",
    "after:release": [
      "scripts/restore-workspace",
      "git add -A",
      "git commit -m \"chore: release v${version}\"",
      "git push"
    ]
  }
}
