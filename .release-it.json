{
  "git": {
    "push": false,
    "commit": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "release": true
  },
  "hooks": {
    "before:init": ["yarn build", "scripts/remove-workspace"],
    "after:release": [
      "scripts/restore-workspace",
      "git add -A",
      "git commit -m \"chore: release v${version}\"",
      "git push"
    ]
  }
}
