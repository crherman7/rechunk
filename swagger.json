{
  "openapi": "3.1.0",
  "info": {
    "title": "ReChunk",
    "summary": "A remote component hosting service.",
    "description": "Server interface for an implementation of a ReChunk instance.",
    "contact": {
      "name": "Chris Herman",
      "email": "crherman7@gmail.com"
    },
    "license": {
      "name": "MIT",
