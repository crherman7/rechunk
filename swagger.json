    },
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "get": {
        "description": "Returns a ReChunk welcome message.",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/project": {
      "get": {
        "description": "Returns a list of active chunks.",
        "security": {
          "BasicAuth": []
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ProjectGetResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        }
      },
      "post": {
        "description": "Create a ReChunk project.",
        "security": {
          "BasicAuth": []
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ProjectPostResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        }
      }
    },
    "/chunk/{chunkId}": {
      "get": {
        "description": "Returns a chunk.",
        "security": {
          "BasicAuth": []
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ChunkGetResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        }
      },
      "delete": {
        "description": "Deletes a chunk.",
        "security": {
          "BasicAuth": []
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ChunkDeleteResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        }
      },
      "post": {
        "description": "Creates or updates a chunk.",
        "security": {
          "BasicAuth": []
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/ChunkPostResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {},
              "application/xml": {}
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ApiResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ProjectPostResponse": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "project": {
          "type": "string"
        },
        "readKey": {
          "type": "string"
        },
        "writeKey": {
          "type": "string"
        },
        "publicKey": {
          "type": "string"
        },
        "privateKey": {
          "type": "string"
        },
        "host": {
          "type": "string"
        }
      }
    },
    "ProjectGetResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "timestamp": {
          "type": "string"
        },
        "chunks": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Chunks"
          }
        }
      }
    },
    "ChunkGetResponse": {
      "type": "object",
      "properties": {
        "data": {
          "type": "string"
        },
        "hash": {
          "type": "string"
        },
        "sig": {
          "type": "string"
        }
      }
    },
    "ChunkDeleteResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ChunkPostResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "Chunks": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "timestamp": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
